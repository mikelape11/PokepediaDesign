<header class="header">
    
    <div class="header__left">
        <a href="/pokedex" class="button button-primary icon--arrow-left">Volver</a>
    </div>

    <div class="header__right">
        <a class="button button-primary icon--arrow-left">Anterior Pokemon</a>
        <a class="button button-primary icon--arrow-right">Siguiente Pokemon</a>
    </div>

</header>

<section class="main-page" id="page_pokedex-detail">

    <div class="pokemon-details-grid">

        <div class="pokemon-details-grid__left">

            <div class="pokemon__main">

                <img src="/assets/images/pokemon/1.png" class="pokemon__img" alt="">
                    
                <div class="pokemon__main__content">

                    <div class="pokemon__toggle-button icon--info" id="tgl-btn"></div>

                    <div class="pokemon__info">
                        <h3 class="pokemon__number"><span>#</span>001 - <span>#</span>123</h3>
                        <h4 class="pokemon__name">Bulbasaur</h4>
                    </div>
    
                    <div class="pokemon__types">
                        <div class="pokemon__type-content">
                            <span class="pokemon__type pokemon__type--grass">Planta</span>
                            <span class="pokemon__type pokemon__type--poison">Veneno</span>
                        </div>
                    </div>
                    
                    <div class="pokemon__features">
                        <div class="pokemon__feature">
                            <h3 class="pokemon__title">Altura</h3>
                            <h4 class="pokemon__text">0'7 m</h4>
                        </div>
                        <div class="pokemon__feature">
                            <h3 class="pokemon__title">Peso</h3>
                            <h4 class="pokemon__text">6'9 kg</h4>
                        </div>
                    </div>

                    <div class="pokemon__description">
                        <h3 class="pokemon__title">Descripción</h3>
                        <h4 class="pokemon__text-description">Bulbasaur es un Pokémon de tipo planta/veneno introducido en la primera generación.</h4>
                    </div>

                    <div class="pokemon__cry">

                        <div class="pokemon__cry-content">
                            <div class="icon--play" id="play-btn"></div>
                            <div class="icon--pause hide" id="pause-btn"></div>
                            <div class="pokemon__slider">
                                <input type="range" id="cry" min="0" max="100" value="0">
                                <div class="pokemon__bar" id="bar"></div>
                                <div class="pokemon__dot"></div>
                            </div>
                            <h5 class="pokemon__timer">0:00</h5>
                        </div>

                    </div>

                    <div class="pokemon__item ">
                        <h3 class="pokemon__title">Forma</h3>
                        <h4 class="pokemon__form">Forma</h4>
                    </div>

                    <div class="pokemon__item ">
                        <h3 class="pokemon__title">Grupo Huevo</h3>
                        <h4 class="pokemon__form">Grupo Huevo</h4>
                    </div>

                    <div class="pokemon__item ">
                        <h3 class="pokemon__title">Habilidad</h3>
                        <h4 class="pokemon__form">Habilidad</h4>
                    </div>

                    <div class="pokemon__item ">
                        <h3 class="pokemon__title">Habilidad 2</h3>
                        <h4 class="pokemon__form">Habilidad 2</h4>
                    </div>

                    <div class="pokemon__item ">
                        <h3 class="pokemon__title">Habilidad Oculta</h3>
                        <h4 class="pokemon__form">Habilidad Oculta</h4>
                    </div>


                </div>

                <div class="pokemon__main__back ">


                    

                </div>
                
            </div>

        </div>

        <div class="pokemon-details-grid__right">

            <nav>
                <ul class="pokemon-details-grid__tabs">

                    <li class="pokemon-details-grid__tab pokemon-details-grid__tab--active"><a href="#">General</a></li>
                    <li class="pokemon-details-grid__tab"><a href="#">Movimientos</a></li>
                    <li class="pokemon-details-grid__tab"><a href="#">Localización</a></li>
                    <li class="pokemon-details-grid__tab"><a href="#">Comparación</a></li>

                </ul>
            </nav>

            <div class="pokemon-details-grid__row">

                <div class="pokemon__stats">
    
                    <div class="pokemon__stats__item">

                        <h3 class="pokemon__stats__name">HP:</h3>

                        <div class="pokemon__stats__bar">
                            <div style="width: 50%;" class="pokemon__stats__bar2 pokemon__stats__bar2--yellow"></div>
                        </div>

                        <div class="pokemon__stats__info">
                            <h3 class="pokemon__stats__number">89</h3>
                        </div>

                    </div>
    
                    <div class="pokemon__stats__item">

                        <h3 class="pokemon__stats__name">Ataque:</h3>

                        <div class="pokemon__stats__bar">
                            <div style="width: 78%;" class="pokemon__stats__bar2 pokemon__stats__bar2--green"></div>
                        </div>

                        <div class="pokemon__stats__info">
                            <h3 class="pokemon__stats__number">120</h3>
                            <div class="icon--arrow-down"></div>
                        </div>

                    </div>
    
                    <div class="pokemon__stats__item">

                        <h3 class="pokemon__stats__name">Defensa:</h3>

                        <div class="pokemon__stats__bar">
                            <div style="width: 25%;" class="pokemon__stats__bar2 pokemon__stats__bar2--orange"></div>
                        </div>

                        <div class="pokemon__stats__info">
                            <h3 class="pokemon__stats__number">44</h3>
                        </div>

                    </div>
    
                    <div class="pokemon__stats__item">

                        <h3 class="pokemon__stats__name">Ataque Esp:</h3>

                        <div class="pokemon__stats__bar">
                            <div style="width: 85%;" class="pokemon__stats__bar2 pokemon__stats__bar2--green"></div>
                        </div>

                        <div class="pokemon__stats__info">
                            <h3 class="pokemon__stats__number">130</h3>
                            <div class="icon--arrow-up"></div>
                        </div>

                    </div>
    
                    <div class="pokemon__stats__item">

                        <h3 class="pokemon__stats__name">Defensa Esp:</h3>

                        <div class="pokemon__stats__bar">
                            <div style="width: 30%;" class="pokemon__stats__bar2 pokemon__stats__bar2--orange"></div>
                        </div>

                       <div class="pokemon__stats__info">
                            <h3 class="pokemon__stats__number">50</h3>
                        </div>

                    </div>
    
                    <div class="pokemon__stats__item">

                        <h3 class="pokemon__stats__name">Velocidad:</h3>

                        <div class="pokemon__stats__bar">
                            <div style="width: 12%;" class="pokemon__stats__bar2 pokemon__stats__bar2--red"></div>
                        </div>

                        <div class="pokemon__stats__info">
                            <h3 class="pokemon__stats__number">27</h3>
                        </div>

                    </div>

                    <div class="pokemon__stats__item">

                        <h3 class="pokemon__stats__name">Total:</h3>

                        <div class="pokemon__stats__bar">
                            <div style="width: 65%;" class="pokemon__stats__bar2 pokemon__stats__bar2--green"></div>
                        </div>

                        <div class="pokemon__stats__info">
                            <h3 class="pokemon__stats__number">140</h3>
                        </div>

                    </div>
    
                </div>

                <div class="pokemon__nature">

                </div>

            </div>

            <div class="pokemon-details-grid__row">

                <div class="pokemon__evolutions">

                    <div class="pokemon__evolution">
                        
                        <div class="pokemon__evolution__img"></div>
                        <h3 class="pokemon__evolution__name"></h3>

                    </div>

                </div>

            </div>


        </div>
    </div>

</section>
